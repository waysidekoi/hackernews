<div class="container">

<% if @user %> 
All posts by <a href="users/<%= @user.id %>"><%= @user.name %></a>
<% end %>


<% @posts.each do |post| %>

  <ul id="posts">
      <li><b><a href="<%= post.url %>"><%= post.title %></a></b></li>
      <li>by <a href="users/<%= post.user.id %>"><%= post.user.name %></a></li>
      <li><abbr class="timeago" title="<%= post.created_at %>">x</abbr></li>
      <li><a href="/posts/<%= post.id %>">
        <% if post.comments.length < 1 %>discuss<% else %><%= post.comments.length %> comments</a><% end %></li>
  </ul>

<% end %>

</div>

